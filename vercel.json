{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/process-timeouts",
      "schedule": "* * * * *" 
      /* Chama o endpoint a cada minuto. O Vercel usa o CRON_SECRET automaticamente. */
    }
  ]
}
